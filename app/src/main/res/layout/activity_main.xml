<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.rajatkumar.finalproject.MainActivity">


    <Button
        android:id="@+id/buttonQuiz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quiz Creater"
        tools:layout_editor_absoluteX="130dp"
        tools:layout_editor_absoluteY="36dp" />

    <Button
        android:id="@+id/buttonPatient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Patient Form"
        tools:layout_editor_absoluteX="130dp"
        tools:layout_editor_absoluteY="132dp" />

    <Button
        android:id="@+id/buttonOCTranspo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OCTranspo"
        tools:layout_editor_absoluteX="130dp"
        tools:layout_editor_absoluteY="217dp" />

    <Button
        android:id="@+id/buttonMovie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="98dp"
        android:text="Movie Info"
        tools:layout_editor_absoluteX="130dp"
        tools:layout_editor_absoluteY="306dp" />


</LinearLayout>
